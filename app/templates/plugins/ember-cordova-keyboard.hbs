    <span class="p">},</span>

    <span class="nx">keyboardDidHide</span><span class="p">()</span> <span class="p">{</span>
      <span class="k">this</span><span class="p">.</span><span class="nx">set</span><span class="p">(</span><span class="s1">'keyboardIsShowing'</span><span class="p">,</span> <span class="kc">false</span><span class="p">);</span>
    <span class="p">}</span>
  <span class="p">});</span>
  </code></pre>
  </div>

